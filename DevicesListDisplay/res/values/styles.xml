<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="List">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="List.Header">
        <item name="android:minHeight">75dp</item>
    </style>

    <style name="List.Header.TextView">
        <item name="android:minHeight">55dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="List.Header.Divider">
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    
    <style name="List.listview">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:dividerHeight">0.25dp</item>
        <item name="android:divider">@android:color/darker_gray</item>
    </style>
    
    <style name="List.Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">20sp</item>
    </style>
    

</resources>